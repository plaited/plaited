{
  "tasks": {
    "lint": "deno lint",
    "test": "deno test --allow-all"
  },
  "importMap": "./.vscode/import-map.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "lib": [
      "dom",
      "dom.iterable",
      "dneo.iterable",
      "deno.ns"
    ]
  },
  "lint": {
    "files": {
      "exclude": [
        "./tests/playwright",
        "./tests/.workshop"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "./tests/playwright",
        "./tests/.workshop"
      ]
    },
    "options": {
      "singleQuote": true,
      "semiColons": false
    }
  },
  "test": {
    "files": {
      "exclude": [
        "./tests/playwright",
        "./tests/.workshop"
      ]
    }
  }
}
