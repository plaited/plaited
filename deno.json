{
  "tasks": {
    "test": "deno test --allow-read  --allow-write --allow-env"
  },
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ]
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "playwright/"
      ]
    },
    "options": {
      "singleQuote": true,
      "semiColons": false
    }
  }
}