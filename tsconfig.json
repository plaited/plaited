{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "src",

    "jsx": "react-jsx",
    "jsxImportSource": "plaited",

    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "plaited/jsx-runtime": ["./src/jsx/runtime.ts"],
      "plaited/jsx-dev-runtime": ["./src/jsx/dev-runtime.ts"]
    }
  },
  "exclude": ["src/css/types/css.d.ts"]
}