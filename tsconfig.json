{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM", "dom.iterable"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "jsxImportSource": "plaited",
    "paths": {
      "plaited": ["./src/main.ts"],
      "plaited/mcp": ["./src/mcp.ts"],
      "plaited/jsx-runtime": ["./src/jsx-runtime.ts"],
      "plaited/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"],
      "plaited/testing": ["/src/testing.ts"],
      "plaited/utils": ["./src/utils.ts"],
      "plaited/workshop": ["./src/workshop.ts"]
    }
  },
  "exclude": ["src/main/types/css.d.ts"]
}
