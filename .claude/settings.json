{
  "permissions": {
    "allow": [
      "WebFetch(domain:bun.sh)",
      "WebFetch(domain:bun.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:modelcontextprotocol.io)",
      "Bash(bash)",
      "Bash(bun:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git diff:*)",
      "Bash(git restore:*)",
      "Bash(docker build:*)",
      "Bash(docker run:*)",
      "Bash(docker logs:*)",
      "Bash(docker stop:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/SessionStart"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/SessionEnd"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/UserPromptSubmit"
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "ralph-loop@claude-plugins-official": true
  },
  "outputStyle": "Explanatory"
}
