{
  "name": "@plaited/server",
  "version": "0.0.0",
  "engines": {
    "node": ">= v18.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plaited/plaited.git"
  },
  "homepage": "https://github.com/plaited/plaited/blob/main/packages/server/README.md",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "test": "exit 0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "src/**/*.spec.*"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@plaited/template": "workspace:*",
    "arg": "5.0.2",
    "chokidar": "3.5.3",
    "urlpattern-polyfill": "6.0.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "1.0.1",
    "@types/node": "18.11.18",
    "beautify": "0.0.8",
    "concat-stream": "2.0.0",
    "fast-glob": "3.2.12",
    "playwright": "1.29.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}
