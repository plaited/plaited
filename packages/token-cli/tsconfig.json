{
  "extends": "@tsconfig/node18/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist",
    "preserveSymlinks": true,
    "rootDir": "src",
    "strictPropertyInitialization": false
  },
  "exclude": [
    "**/tests",
    "**/dist",
    "**/*.spec.*"
  ],
  "include": [
    "src"
  ]
}