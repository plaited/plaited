{
  "name": "@plaited/utils",
  "version": "1.0.0",
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">= v18.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plaited/plaited.git"
  },
  "homepage": "https://github.com/plaited/plaited/blob/main/packages/utils/README.md",
  "author": "Edward Irby <e.irby@pm.me>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "test": "ava",
    "test:watch": "yarn test --watch --verbose"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "src/**/*.spec.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@tsconfig/node18": "1.0.1",
    "@types/sinon": "10.0.13",
    "ava": "5.1.0",
    "sinon": "14.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}
