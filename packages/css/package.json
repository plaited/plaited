{
  "name": "@plaited/css",
  "version": "0.0.0",
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">= v18.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plaited/plaited.git"
  },
  "homepage": "https://github.com/plaited/plaited/blob/main/packages/css/README.md",
  "author": "Edward Irby <e.irby@pm.me>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn build:types & yarn build:js",
    "build:js": "esbuild src/index.ts --bundle --sourcemap --format=esm --target=es2022,chrome109 --outdir=dist",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly",
    "prepublishOnly": "yarn build",
    "test": "yarn build && ava"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "src/**/*.spec.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@tsconfig/node18": "1.0.1",
    "@types/node": "18.11.18",
    "ava": "5.1.0",
    "esbuild": "0.17.5",
    "jss": "10.9.2",
    "jss-plugin-camel-case": "10.9.2",
    "jss-plugin-global": "10.9.2",
    "jss-plugin-nested": "10.9.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}
