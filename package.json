{
  "license": "ISC",
  "engines": {
    "node": ">= v18.15.0"
  },
  "type": "module",
  "workspaces": [
    "docs",
    "libs/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "clean": "bash scripts/clean.bash",
    "lint": "eslint . --ignore-pattern \"**/dist/*\"",
    "lint:fix": "bun run lint --fix --quiet --ignore-pattern \"**/dist/*\"",
    "postinstall": "husky install",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "storybook": "storybook dev -p 6006 --ci",
    "test": "lerna run test --stream",
    "test-storybook": "start-server-and-test 'bun run storybook' http://localhost:6006 'bunx test-storybook'"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint:fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/config-lerna-scopes": "19.0.0",
    "@eslint/js": "9.7.0",
    "@playwright/test": "1.45.1",
    "@storybook/test-runner": "0.16.0",
    "@storybook/addon-essentials": "7.6.13",
    "@storybook/addon-interactions": "7.6.13",
    "@storybook/html-vite": "7.6.13",
    "@types/beautify": "0.0.3",
    "@types/sinon": "17.0.3",
    "@types/eslint__js": "8.42.3",
    "beautify": "0.0.8",
    "@types/bun": "1.1.6",
    "bun-types": "1.1.20",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.7.0",
    "eslint-config-prettier": "9.1.0",
    "format-package": "7.0.0",
    "globals": "15.8.0",
    "husky": "9.0.11",
    "lerna": "8.1.6",
    "lint-staged": "15.2.7",
    "playwright": "1.45.1",
    "prettier": "3.3.3",
    "sinon": "18.0.0",
    "start-server-and-test": "2.0.4",
    "storybook": "7.6.13",
    "typescript": "5.5.3",
    "vite": "5.3.2",
    "typescript-eslint": "7.16.0",
    "zod": "3.23.8"
  }
}