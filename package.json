{
  "license": "ISC",
  "engines": {
    "node": ">= v18.15.0"
  },
  "type": "module",
  "workspaces": [
    "libs/*",
    "libs-storybook/*",
    "libs-test/*",
    "libs-token/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs",
    "lint:fix": "bun run lint --fix --quiet",
    "postinstall": "husky install",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "test": "lerna run test --stream"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint:fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "browserslist": [
    "> 2%"
  ],
  "devDependencies": {
    "@plaited/eslint-prettier-config": "1.0.3",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@commitlint/config-lerna-scopes": "18.4.3",
    "@playwright/test": "1.40.1",
    "@types/sinon": "17.0.2",
    "beautify": "0.0.8",
    "bun-types": "1.0.15",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.55.0",
    "format-package": "7.0.0",
    "husky": "8.0.3",
    "lerna": "8.0.0",
    "lint-staged": "15.2.0",
    "playwright": "1.40.1",
    "prettier": "3.1.0",
    "sinon": "17.0.1",
    "typescript": "5.3.3"
  }
}
