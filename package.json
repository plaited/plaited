{
  "name": "plaited",
  "version": "0.0.0",
  "license": "ISC",
  "engines": {
    "node": ">= v18.15.0"
  },
  "files": [
    "./node/behavioral/dist/",
    "./node/islandly/dist/",
    "./node/rite/dist/",
    "./node/utils/dist/"
  ],
  "exports": {
    ".": "./node/islandly/dist/index.js",
    "./behavioral": "./node/behavioral/dist/index.js",
    "./rite": "./node/rite/dist/index.js",
    "./utils": "./node/utils/dist/index.js"
  },
  "workspaces": [
    "node/**"
  ],
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "yarn lint:fix"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "browserslist": [
    "> 2%"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -ptR --from '{@plaited/utils,@plaited/rite,@plaited/behavioral,@plaited/islandly}' run build",
    "dev": "node scripts/dev.cjs",
    "lint": "eslint ./node --ext .ts,.tsx,.js,.cjs",
    "lint:fix": "yarn lint --fix --quiet",
    "postinstall": "husky install",
    "postpack": "pinst --enable",
    "prepack": "pinst --disable",
    "prepare": "husky install",
    "test": "yarn workspaces foreach -ptR --from '{@plaited/utils,@plaited/rite,@plaited/behavioral,@plaited/islandly}' run test"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.39.0",
    "eslint-plugin-compat": "4.1.4",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-storybook": "0.6.11",
    "format-package": "7.0.0",
    "husky": "8.0.3",
    "pinst": "3.0.0"
  }
}
