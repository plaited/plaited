{
  "name": "plaited",
  "version": "6.0.0",
  "license": "ISC",
  "engines": {
    "node": ">= v22.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/plaited.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/plaited/issues"
  },
  "homepage": "https://github.com/plaited/plaited/tree/main/libs/plaited#readme",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./behavioral": "./src/behavioral.ts",
    "./indexedDB": "./src/indexedDB.ts",
    "./jsx-dev-runtime": "./src/jsx/dev-runtime.ts",
    "./jsx-runtime": "./src/jsx/runtime.ts",
    "./style": "./src/style.ts",
    "./utils": "./src/utils.ts",
    "./worker": "./src/worker.ts"
  },
  "files": [
    "./src/**",
    "!./src/**/tests/*",
    "!./src/**/*.spec.@(tsx|ts)"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "tsc --project tsconfig.json",
    "copy-css-types": "bash scripts/copy-css-types.sh",
    "lint": "eslint . --ignore-pattern \"**/dist/*\"",
    "lint-fix": "bun run lint --fix --quiet --ignore-pattern \"**/dist/*\"",
    "prepare": "git config core.hooksPath .hooks",
    "prettier": "prettier . --write",
    "test": "bun run test-stories && bun test",
    "test-stories": "bun run src/tests/story-runner.ts",
    "watch": "bun run check --watch"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint-fix",
      "bun run prettier",
      "bun run copy-css-types"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.0",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.11.1",
    "@playwright/test": "1.47.2",
    "@types/beautify": "0.0.3",
    "@types/bun": "1.1.10",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.7.4",
    "@types/sinon": "17.0.3",
    "beautify": "0.0.8",
    "bun-types": "1.1.29",
    "csstype": "3.1.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.24.0",
    "eslint": "9.11.1",
    "eslint-config-prettier": "9.1.0",
    "format-package": "7.0.0",
    "globals": "15.9.0",
    "lint-staged": "15.2.10",
    "playwright": "1.47.2",
    "prettier": "3.3.3",
    "sinon": "19.0.2",
    "start-server-and-test": "2.0.8",
    "typescript": "5.6.2",
    "typescript-eslint": "8.7.0"
  }
}
