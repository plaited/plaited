{
  "name": "plaited",
  "version": "7.0.0-alpha-9",
  "license": "ISC",
  "engines": {
    "node": ">= v22.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/plaited.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/plaited/issues"
  },
  "homepage": "https://github.com/plaited/plaited/tree/main#readme",
  "type": "module",
  "main": "./src/main.ts",
  "exports": {
    ".": "./src/main.ts",
    "./behavioral": "./src/behavioral.ts",
    "./jsx-dev-runtime": "./src/jsx-dev-runtime.ts",
    "./jsx-runtime": "./src/jsx-runtime.ts",
    "./styling": "./src/styling.ts",
    "./testing": "./src/testing.ts",
    "./utils": "./src/utils.ts"
  },
  "files": [
    "./src/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "tsc --project tsconfig.json",
    "copy-css-types": "bash scripts/copy-css-types.sh",
    "lint": "eslint . --ignore-pattern \"**/dist/*\"",
    "lint-fix": "bun run lint --fix --quiet --ignore-pattern \"**/dist/*\"",
    "prepare": "git config core.hooksPath .hooks",
    "prettier": "prettier . --write",
    "test": "bun run test-stories && bun test",
    "test-stories": "bun run workshop/runner.ts",
    "watch": "bun run check --watch"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint-fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.1",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.23.0",
    "@microsoft/tsdoc": "^0.15.1",
    "@playwright/test": "1.51.1",
    "@types/beautify": "0.0.3",
    "@types/bun": "1.2.8",
    "@types/eslint__js": "9.14.0",
    "@types/node": "22.13.14",
    "@types/sinon": "17.0.4",
    "beautify": "0.0.8",
    "bun-plugin-virtual": "^0.1.0",
    "bun-types": "1.2.8",
    "csstype": "3.1.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "format-package": "7.0.0",
    "globals": "16.0.0",
    "lint-staged": "15.5.0",
    "ollama": "^0.5.14",
    "playwright": "1.51.1",
    "prettier": "3.5.3",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "sinon": "20.0.0",
    "ts-morph": "25.0.1",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "unified": "^11.0.5",
    "unist-util-select": "^5.1.0"
  }
}
