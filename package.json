{
  "name": "plaited",
  "version": "6.0.0",
  "license": "ISC",
  "engines": {
    "node": ">= v18.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/plaited.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/plaited/issues"
  },
  "homepage": "https://github.com/plaited/plaited/tree/main/libs/plaited#readme",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./assert": "./src/assert.ts",
    "./behavioral": "./src/behavioral.ts",
    "./jsx-dev-runtime": "./src/jsx/dev-runtime.ts",
    "./jsx-runtime": "./src/jsx/runtime.ts",
    "./style": "./src/style.ts",
    "./utils": "./src/utils.ts"
  },
  "files": [
    "./src/**",
    "!./src/**/tests/*",
    "!./src/**/*.spec.@(tsx|ts)"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "tsc --project tsconfig.json",
    "clean": "bash scripts/clean.bash",
    "copy-dep-types": "bash scripts/copy-dep-types.sh",
    "lint": "eslint . --ignore-pattern \"**/dist/*\"",
    "lint:fix": "bun run lint --fix --quiet --ignore-pattern \"**/dist/*\"",
    "prepare": "git config core.hooksPath .hooks",
    "postinstall": "bun run copy-dep-types",
    "prettier": "prettier . --write",
    "test": "start-server-and-test 'bun run storybook' http://localhost:6006 'bun test tests/* --watch'",
    "watch": "bun run check --watch"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint:fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "devDependencies": {
    "csstype": "3.1.3",
    "@axe-core/playwright": "4.10.0",
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.4.1",
    "@eslint/js": "9.10.0",
    "@playwright/test": "1.47.0",
    "@types/beautify": "0.0.3",
    "@types/sinon": "17.0.3",
    "@types/eslint__js": "8.42.3",
    "beautify": "0.0.8",
    "@types/bun": "1.1.8",
    "bun-types": "1.1.27",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "format-package": "7.0.0",
    "globals": "15.9.0",
    "lint-staged": "15.2.10",
    "playwright": "1.47.0",
    "prettier": "3.3.3",
    "sinon": "18.0.0",
    "start-server-and-test": "2.0.6",
    "typescript": "5.5.4",
    "typescript-eslint": "8.4.0"
  }
}