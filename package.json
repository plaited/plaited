{
  "name": "plaited",
  "version": "7.0.0-alpha-1",
  "license": "ISC",
  "engines": {
    "node": ">= v22.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/plaited.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/plaited/issues"
  },
  "homepage": "https://github.com/plaited/plaited/tree/main#readme",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./behavioral": "./src/behavioral.ts",
    "./jsx-dev-runtime": "./src/jsx/dev-runtime.ts",
    "./jsx-runtime": "./src/jsx/runtime.ts",
    "./style": "./src/style.ts",
    "./test": "./src/test.ts",
    "./utils": "./src/utils.ts"
  },
  "files": [
    "./src/**",
    "!./src/**/tests/*",
    "!./src/**/*.spec.@(tsx|ts)"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "tsc --project tsconfig.json",
    "copy-css-types": "bash scripts/copy-css-types.sh",
    "lint": "eslint . --ignore-pattern \"**/dist/*\"",
    "lint-fix": "bun run lint --fix --quiet --ignore-pattern \"**/dist/*\"",
    "prepare": "git config core.hooksPath .hooks",
    "prettier": "prettier . --write",
    "test": "bun run test-stories && bun test",
    "test-stories": "bun run src/workshop/runner.ts",
    "watch": "bun run check --watch"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint-fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.1",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.16.0",
    "@playwright/test": "1.49.0",
    "@swc/core": "1.9.3",
    "@types/beautify": "0.0.3",
    "@types/bun": "1.1.14",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.10.1",
    "@types/sinon": "17.0.3",
    "beautify": "0.0.8",
    "bun-types": "1.1.38",
    "csstype": "3.1.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.24.0",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "format-package": "7.0.0",
    "globals": "15.12.0",
    "lint-staged": "15.2.10",
    "playwright": "1.49.0",
    "prettier": "3.4.1",
    "sinon": "19.0.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.16.0"
  }
}
