{
  "name": "plaited",
  "version": "7.2.0",
  "license": "ISC",
  "engines": {
    "bun": ">= v1.2.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/plaited.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/plaited/issues"
  },
  "homepage": "https://github.com/plaited/plaited/tree/main#readme",
  "bin": {
    "plaited": "./src/workshop/cli.ts"
  },
  "type": "module",
  "main": "./src/main.ts",
  "exports": {
    ".": "./src/main.ts",
    "./workshop": "./src/workshop.ts",
    "./jsx-dev-runtime": "./src/jsx-dev-runtime.ts",
    "./jsx-runtime": "./src/jsx-runtime.ts",
    "./utils": "./src/utils.ts",
    "./testing": "./src/testing.ts"
  },
  "files": [
    "./.bin/**",
    "./.plaited.ts",
    "./src/**",
    "!./src/**/tests/*",
    "!./src/**/*.test.@(tsx|ts)",
    "!./src/**/*.stories.@(tsx|ts)"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "tsc --project tsconfig.json",
    "check:watch": "bun run check --watch",
    "copy-css-types": "bash scripts/copy-css-types.sh",
    "lint": "eslint . --ignore-pattern \"**/dist/*\"",
    "lint-fix": "bun run lint --fix --quiet --ignore-pattern \"**/dist/*\"",
    "prepare": "git config core.hooksPath .hooks",
    "prettier": "prettier . --write",
    "test": "bun run test-stories && bun test",
    "test-stories": "bun src/workshop/cli.ts test src/main"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint-fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "@types/bun": {
      "optional": true
    },
    "axe-core": {
      "optional": true
    },
    "playwright": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@types/bun": "^1.3.2",
    "axe-core": "^4.11.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "playwright": "^1.56.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@eslint/js": "9.39.1",
    "@types/beautify": "0.0.3",
    "@types/node": "24.10.1",
    "@types/sinon": "20.0.0",
    "beautify": "0.0.8",
    "bun-types": "^1.3.2",
    "csstype": "3.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "format-package": "7.0.0",
    "globals": "16.5.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "playwright": "^1.56.1",
    "sinon": "21.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "zod": "^4.1.12"
  }
}
