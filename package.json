{
  "name": "plaited",
  "version": "7.2.0",
  "license": "ISC",
  "engines": {
    "bun": ">= v1.2.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/plaited.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/plaited/issues"
  },
  "homepage": "https://github.com/plaited/plaited/tree/main#readme",
  "bin": {
    "plaited": "./.bin/plaited.js"
  },
  "type": "module",
  "main": "./src/main.ts",
  "exports": {
    ".": "./src/main.ts",
    "./jsx-dev-runtime": "./src/jsx-dev-runtime.ts",
    "./jsx-runtime": "./src/jsx-runtime.ts",
    "./testing": "./src/testing.ts",
    "./utils": "./src/utils.ts",
    "./workshop": "./src/workshop.ts"
  },
  "files": [
    "./.bin/**",
    "./.plaited.ts",
    "./src/**",
    "!./src/**/tests/*",
    "!./src/**/*.spec.@(tsx|ts)",
    "!./src/**/*.stories.@(tsx|ts)"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "bun run check:biome && bun run check:types && bun run check:package",
    "check:biome": "biome check",
    "check:package": "format-package --check",
    "check:types": "tsc --noEmit",
    "check:write": "biome check --write && format-package --write",
    "copy-css-types": "bash scripts/copy-css-types.sh",
    "dev": "bun --hot src/workshop/cli.ts dev",
    "prepare": "git config core.hooksPath .hooks",
    "test": "bun run test:stories && bun test",
    "test:playwright": "bunx playwright test",
    "test:stories": "bun src/workshop/cli.ts test src/main",
    "test:story": "bun src/workshop/cli.ts test"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bunx @biomejs/biome check --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "@types/bun": {
      "optional": true
    },
    "axe-core": {
      "optional": true
    },
    "playwright": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@types/bun": "^1.3.2",
    "axe-core": "^4.11.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "playwright": "^1.56.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@modelcontextprotocol/sdk": "1.25.1",
    "@playwright/mcp": "0.0.52",
    "@playwright/test": "1.57.0",
    "@types/beautify": "0.0.3",
    "@types/bun": "1.3.5",
    "@types/node": "25.0.3",
    "@types/sinon": "21.0.0",
    "axe-core": "4.11.0",
    "beautify": "0.0.8",
    "csstype": "3.2.3",
    "cz-conventional-changelog": "3.3.0",
    "format-package": "7.0.0",
    "lint-staged": "16.2.7",
    "playwright": "1.57.0",
    "sinon": "21.0.0",
    "typescript": "5.9.3",
    "zod": "4.2.1"
  }
}
