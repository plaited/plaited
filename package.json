{
  "license": "ISC",
  "engines": {
    "node": ">= v18.15.0"
  },
  "type": "module",
  "workspaces": [
    "docs",
    "libs/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs",
    "lint:fix": "bun run lint --fix --quiet",
    "postinstall": "husky install",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "storybook": "storybook dev -p 6006 --ci",
    "test": "lerna run test --stream",
    "test-storybook": "start-server-and-test 'bun run storybook' http://localhost:6006 'bunx test-storybook'"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint:fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "browserslist": [
    "> 2%"
  ],
  "devDependencies": {
    "@plaited/eslint-prettier-config": "1.0.3",
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@commitlint/config-lerna-scopes": "18.4.4",
    "@playwright/test": "1.41.2",
    "@storybook/test-runner": "0.16.0",
    "@storybook/addon-essentials": "7.6.13",
    "@storybook/addon-interactions": "7.6.13",
    "@storybook/html-vite": "7.6.13",
    "@types/sinon": "17.0.3",
    "@types/beautify": "0.0.3",
    "beautify": "0.0.8",
    "@types/bun": "1.0.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.56.0",
    "format-package": "7.0.0",
    "husky": "9.0.10",
    "lerna": "8.1.2",
    "lint-staged": "15.2.2",
    "playwright": "1.41.2",
    "prettier": "3.2.5",
    "sinon": "17.0.1",
    "start-server-and-test": "2.0.3",
    "storybook": "7.6.13",
    "typescript": "5.3.3",
    "vite": "5.0.13"
  }
}
