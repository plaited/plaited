{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    
    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "stories",

    "jsx": "react-jsx",
    "jsxImportSource": "plaited",
  },
  "include": ["stories/**/*", ".storybook/**/*"],
  "exclude": ["**/dist", "**/tests/"]
}
